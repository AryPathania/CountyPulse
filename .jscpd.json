{
  "threshold": 3,
  "reporters": ["console"],
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/*.d.ts",
    "**/types.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/test/**",
    "**/__tests__/**"
  ],
  "format": ["typescript", "tsx", "javascript", "jsx"],
  "absolute": true,
  "gitignore": true
}
